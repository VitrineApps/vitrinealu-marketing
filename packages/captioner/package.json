{
  "name": "@vitrinealu/captioner",
  "version": "1.0.0",
  "description": "AI-powered caption generator for social media platforms",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "bin": {
    "vcaption": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "lint": "eslint 'src/**/*.ts'",
    "cli": "node dist/cli.js --help",
    "smoke": "node dist/cli.cjs --media ./fixtures --platform instagram --brand ./fixtures/brand.example.yaml --out ./tmp/captions.json --seed 7"
  },
  "keywords": [
    "ai",
    "caption",
    "social-media",
    "openai",
    "gemini",
    "instagram",
    "tiktok",
    "linkedin",
    "facebook"
  ],
  "author": "VitrineAlu",
  "license": "UNLICENSED",
  "dependencies": {
    "dotenv": "^16.0.0",
    "exifr": "^7.1.3",
    "fs-extra": "^11.3.2",
    "globby": "^13.0.0",
    "p-limit": "^4.0.0",
    "p-retry": "^6.0.0",
    "pino": "^8.15.0",
    "pino-pretty": "^10.0.0",
    "yaml": "^2.3.1",
    "zod": "^3.22.4"
  },
  "optionalDependencies": {
    "@google/generative-ai": "^0.21.0",
    "openai": "^4.52.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "tsup": "^7.0.0",
    "typescript": "^5.1.6"
  }
}

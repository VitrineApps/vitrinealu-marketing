{
  "name": "@vitrinealu/video-assembler",
  "version": "1.0.0",
  "description": "Video assembler for VitrineAlu marketing content",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts --ignore-pattern tests/**/*.d.ts --ignore-pattern src/**/*.d.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "video",
    "ffmpeg",
    "assembler",
    "marketing"
  ],
  "author": "VitrineAlu",
  "license": "UNLICENSED",
  "dependencies": {
    "commander": "^11.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.1",
    "pino": "^8.15.0",
    "yaml": "^2.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/yaml": "^1.9.7",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
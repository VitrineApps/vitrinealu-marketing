{
  "name": "@vitrinealu/video-api",
  "version": "1.0.0",
  "description": "Video API service for VitrineAlu marketing content",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@vitrinealu/video-assembler": "workspace:*",
    "@vitrinealu/captioner": "workspace:*",
    "express": "^4.18.2",
    "bullmq": "^4.15.4",
    "ioredis": "^5.3.2",
    "pino": "^8.15.0",
    "pino-http": "^8.5.0",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2",
    "eslint": "^8.53.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
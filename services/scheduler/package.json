{
  "name": "@vitrinealu/scheduler",
  "version": "1.0.0",
  "description": "Social media content scheduler with Buffer API integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "vschedule": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts --ignore-pattern tests/**/*.d.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix --ignore-pattern tests/**/*.d.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "social-media",
    "scheduler",
    "buffer",
    "automation",
    "email",
    "webhook"
  ],
  "author": "VitrineAlu",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "better-sqlite3": "^9.4.3",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "yaml": "^2.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@sendgrid/mail": "^8.1.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/yaml": "^1.9.7",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "modulePaths": ["<rootDir>/dist"],
    "transform": {
      "^.+\\.ts$": ["ts-jest", {
        "useESM": true
      }]
    },
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
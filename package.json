{
  "name": "vitrinealu-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky install",
    "changeset": "changeset",
    "release": "changeset version && pnpm install --no-frozen-lockfile",
    "up": "docker compose -f infra/compose/docker-compose.yml up -d",
    "down": "docker compose -f infra/compose/docker-compose.yml down -v"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.0.0-canary.50",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "turbo": "^2.0.6",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1"
  },
  "dependencies": {}
}
